using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace YA_BASTA
{
    class Program
    {
        static bool[,] seats = new bool[5, 5];
        const string filename = "reservas.txt";
        static void Main(string[] args)
        {
            Console.BackgroundColor = ConsoleColor.White;
            Console.ForegroundColor = ConsoleColor.DarkRed;
            Console.Title = "Inicio de Sesión";
            string usersFile = "users.txt"; // archivo de usuarios
            bool isLoggedIn = false;

            Console.WriteLine("Ingrese su nombre de usuario:");
            string username = Console.ReadLine();
            Console.WriteLine("Ingrese su contraseña:");
            string password = Console.ReadLine();

            // Verificar si el usuario existe en el archivo de usuarios
            if (File.Exists(usersFile))
            {
                string[] users = File.ReadAllLines(usersFile);
                foreach (string user in users)
                {
                    string[] userDetails = user.Split(',');
                    if (userDetails[0] == username && userDetails[1] == password)
                    {
                        isLoggedIn = true;
                        break;
                    }
                }
            }

            if (isLoggedIn)
            {
                Console.WriteLine("Inicio de sesión exitoso.");
            }
            else
            {
                Console.WriteLine("Usuario no encontrado. Por favor, regístrese.");
                RegisterUser(usersFile);
            }
            Console.WriteLine("Determine el medio de seleccion de funcion");
            Console.Write($"Le gustaria proseguir por medio de peliculas, si desea continuar, presione 1");
            int x = int.Parse(Console.ReadLine());
            if (x == 1)
            {
                Peliculas();
            }
            else
            {
                cine();
            }
            List<Sala> salas = new List<Sala>();
            salas.Add(new Sala("Sala 1", "Sucursal A", 10.50, 50));
            salas.Add(new Sala("Sala 2", "Sucursal A", 12.00, 75));
            salas.Add(new Sala("Sala 3", "Sucursal B", 9.50, 40));
            salas.Add(new Sala("Sala 4", "Sucursal B", 11.00, 60));

            // Presentar cartelera e información de sucursales
            Console.ForegroundColor = ConsoleColor.Red;
            Console.WriteLine("Bienvenido a nuestro cine:");
            Console.ForegroundColor = ConsoleColor.Green;
            Console.WriteLine("Sucursales disponibles:");
            Console.ResetColor();
            var sucursales = salas.GroupBy(s => s.Sucursal).Select(grp => grp.First().Sucursal).ToList();
            for (int i = 0; i < sucursales.Count; i++)
            {
                Console.WriteLine($"{i + 1}. {sucursales[i]}");
            }
            Console.ForegroundColor = ConsoleColor.Blue;
            Console.Write("Seleccione una sucursal para ver las películas disponibles: ");
            Console.ResetColor();
            int seleccion = int.Parse(Console.ReadLine()) - 1;
            var salasSucursal = salas.Where(s => s.Sucursal == sucursales[seleccion]).ToList();
            Console.WriteLine($"Películas disponibles en {sucursales[seleccion]}:");
            foreach (var sala in salasSucursal)
            {
                Console.WriteLine($"{sala.Nombre} ({sala.Precio:C2} por entrada, capacidad de {sala.Capacidad} personas)");
            }

            // Reporte de salas organizadas por cantidad de entradas vendidas
            var salasOrdenadas = salas.OrderByDescending(s => s.EntradasVendidas).ToList();
            Console.ForegroundColor = ConsoleColor.Cyan;
            Console.WriteLine("Reporte de salas ordenadas por cantidad de entradas vendidas:");
            Console.ResetColor();
            foreach (var sala in salasOrdenadas)
            {
                Console.ForegroundColor = ConsoleColor.Yellow;
                Console.WriteLine($"{sala.Nombre}: {sala.EntradasVendidas} entradas vendidas");
                Console.ResetColor();
            }

            // Reportar sucursal con el mayor número de ingresos
            var ingresosPorSucursal = salas.GroupBy(s => s.Sucursal)
                                          .Select(grp => new
                                          {
                                              Sucursal = grp.Key,
                                              Ingresos = grp.Sum(s => s.Precio * s.EntradasVendidas)
                                          }).ToList();
            var sucursalMayorIngreso = ingresosPorSucursal.OrderByDescending(s => s.Ingresos).First();
            Console.ForegroundColor = ConsoleColor.Magenta;
            Console.WriteLine($"La sucursal con el mayor número de ingresos es {sucursalMayorIngreso.Sucursal} " +
                              $"con un total de {sucursalMayorIngreso.Ingresos:C2}");
            Console.ResetColor();
            // Opción para calcular el cambio de dinero
            Console.ForegroundColor = ConsoleColor.DarkBlue;
            Console.WriteLine("¿Desea calcular el cambio de dinero para una transacción? (S/N) S = Si.  N = No.");
            Console.ResetColor();
            string opcion = Console.ReadLine();
            if (opcion.ToUpper() == "S")
            {
                Console.ForegroundColor = ConsoleColor.Red;
                Console.Write("Ingrese el valor total de las boletas: ");
                double totalBoletas = double.Parse(Console.ReadLine());
                Console.Write("Ingrese la cantidad de dinero entregado: ");
                double dineroEntregado = double.Parse(Console.ReadLine());
                double cambio = dineroEntregado - totalBoletas;
                Console.WriteLine($"El cambio a entregar es de {cambio:C2}");
            }
            Console.WriteLine("Gracias por visitar nuestro cine. ¡Que disfrute la película!");
            Console.ResetColor();

        }

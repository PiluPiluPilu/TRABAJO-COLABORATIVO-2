        static void butacas()
        {
            InitializeSeats();
            LoadReservations();
            PrintSeats();
            while (true)
            {
                Console.Write("Ingrese la fila que desea reservar (1-5): ");
                int row = int.Parse(Console.ReadLine()) - 1;

                Console.Write("Ingrese el número de asiento que desea reservar (1-5): ");
                int seat = int.Parse(Console.ReadLine()) - 1;

                if (ReserveSeat(row, seat))
                {
                    Console.WriteLine("Asiento reservado con éxito.");
                    SaveReservations();
                    PrintSeats();
                    break;
                }
                else
                {
                    Console.WriteLine("Lo siento, ese asiento ya está reservado o ya has seleccionado un asiento.");
                }
            }
        }
        static void InitializeSeats()
        {
            for (int i = 0; i < seats.GetLength(0); i++)
            {
                for (int j = 0; j < seats.GetLength(1); j++)
                {
                    seats[i, j] = false;
                }
            }
        }
        static void LoadReservations()
        {
            if (!File.Exists(filename))
            {
                return;
            }

            string[] lines = File.ReadAllLines(filename);
            for (int i = 0; i < seats.GetLength(0) && i < lines.Length; i++)
            {
                string[] rowSeats = lines[i].Split(',');
                for (int j = 0; j < seats.GetLength(1) && j < rowSeats.Length; j++)
                {
                    if (rowSeats[j] == "1")
                    {
                        seats[i, j] = true;
                    }
                }
            }
        }
        static void SaveReservations()
        {
            string[] lines = new string[seats.GetLength(0)];
            for (int i = 0; i < seats.GetLength(0); i++)
            {
                string[] rowSeats = new string[seats.GetLength(1)];
                for (int j = 0; j < seats.GetLength(1); j++)
                {
                    rowSeats[j] = seats[i, j] ? "1" : "0";
                }
                lines[i] = string.Join(",", rowSeats);
            }
            File.WriteAllLines(filename, lines);
        }
        static void PrintSeats()
        {
            Console.WriteLine("Butacas disponibles:");
            for (int i = 0; i < seats.GetLength(0); i++)
            {
                for (int j = 0; j < seats.GetLength(1); j++)
                {
                    Console.Write(seats[i, j] ? "X " : "- ");
                }
                Console.WriteLine();
            }
        }
        static bool ReserveSeat(int row, int seat)
        {
            if (seats[row, seat])
            {
                return false;
            }
            else
            {
                seats[row, seat] = true;
                return true;
            }
        }
